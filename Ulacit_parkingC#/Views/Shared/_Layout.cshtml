<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>- Parqueo</title>
    <link rel="stylesheet" href="~/Content/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="d-flex">
        <!-- Sidebar con imagen de fondo -->
        <div class="sidebar" style="background-image: url('/Content/img/FondoIzq.PNG'); background-size: cover; background-repeat: no-repeat; height: 100vh; padding-top: 20px;">
            <div class="container">
                <!-- Enlace Home -->
                <a href="@Url.Action("Index", "Administracion")" class="btn btn-light mb-3">Home</a>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="content" style="flex-grow: 1;">
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-custom mb-3">
                    <div>
                        <div class="">
                            <img src="~/Content/img/ulacit.png" alt="Imagen ParkIn" class="img-ulacit">
                        </div>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <div class="navbar-nav flex-grow-1 p-2">

                                <!-- Icono de usuario con dropdown -->
                                <div class="dropdown">
                                    <i class="fa-solid fa-user fa-sm" style="color: #ffffff; position:relative; font-size:35px; right:-120px; top:-50px;" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false"></i>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown" style="right: -120px; top: -10px; ">
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "Home")">My Profile</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Logout</a></li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

