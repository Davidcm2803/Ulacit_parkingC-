@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Login</title>
    <script>
        // Función para mostrar la alerta
        function showAlert() {
            alert('@TempData["SuccessMessage"]');
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="login-box">
            <div class="logo">
                <img src="~/Content/image.png" alt="logo" class="logo-img">
                <h1><span class="orange-text">Park</span> In</h1>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="error-message">
                    @ViewBag.ErrorMessage
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <script>
                    showAlert(); // Llama a la función para mostrar la alerta si hay un mensaje
                </script>
            }

            <form method="post" action="@Url.Action("Login", "Admin")">
                <label for="email">Email address</label>
                <div class="input-group">
                    <input type="email" id="email" name="email" placeholder="Enter your email" required>
                    <i class="fas fa-envelope"></i>
                </div>

                <label for="password">Password</label>
                <div class="input-group">
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                    <i class="fas fa-lock"></i>
                </div>

                <div class="actions">
                    <a href="#" class="forgot-password">Forgot Password?</a>
                    <button class="btn-login" type="submit">Login Now</button>
                </div>

                <div class="divider">OR</div>
            </form>

            <div class="signup">
                <a href="@Url.Action("Register", "Admin")">
                    <button class="btn-signup">Signup Now</button>
                </a>
            </div>
        </div>

        <div class="image-box">
            <img src="~/Content/parking.jpg" alt="Logo" class="parking-img">
        </div>
    </div>
</body>
</html>




